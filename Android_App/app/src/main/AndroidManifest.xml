<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="natalia.doskach.audioorganizer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/colorwave"
        android:label="@string/app_name"
        android:roundIcon="@drawable/colorwave"
        android:supportsRtl="true"
        android:theme="@style/Theme.AudioOrganizer">
        <activity android:name=".TelegramActivity"></activity>
        <activity android:name=".RecordAudioActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>